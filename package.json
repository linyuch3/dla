{
  "name": "cloudpanel",
  "version": "2.0.0",
  "description": "CloudPanel - 云服务器管理面板 (Docker版本)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch functions/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "docker:build": "docker build -t cloudpanel .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "type-check": "tsc --noEmit",
    "lint": "eslint functions/**/*.ts",
    "format": "prettier --write functions/**/*.ts",
    "clean": "rm -rf dist .wrangler data",
    "migrate": "node -e \"require('./dist/shared/db-init.js').initializeDatabase()\""
  },
  "keywords": [
    "docker",
    "cloud",
    "server",
    "management",
    "digitalocean",
    "linode",
    "azure",
    "panel"
  ],
  "author": "CloudPanel Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.8.1",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  }
} 
